{
  "name": "uinta-api",
  "version": "2.0.0",
  "description": "Base API for Uinta Applications",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "prestart:prod": "tsc",
    "start:prod": "node dist/server.js",
    "build": "tsc",
    "test": "jest --config ./jest.config.json",
    "e2e": "jest --config ./jest.e2e.config.js --forceExit",
    "ci": "npm run test && npm run e2e",
    "watch": "tsc -w",
