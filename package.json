    "@types/express": "^4.0.36",
    "@types/express-session": "^1.15.3",
    "@types/jest": "^21.1.4",
    "@types/mongoose": "^4.7.23",
    "@types/node": "8.0.46",
    "@types/passport": "^0.3.4",
    "@types/passport-facebook": "^2.1.6",
    "@types/passport-jwt": "^2.0.24",
    "@types/passport-local": "^1.0.31",
    "cz-conventional-changelog": "^2.0.0",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.1.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.4.2",
    "gulp": "^3.9.1",
    "gulp-clean-css": "3.9.0",
    "gulp-header": "1.8.9",
