{
  "name": "uinta-api",
  "version": "0.0.10",
  "description": "Base API for Uinta Applications",
  "license": "MIT",
  "scripts": {
    "start": "node bin/main.js",
    "build": "tsc",
    "prepackage": "tsc && npm run docs",
    "package": "sh ./utils/eb-package.sh",
    "lint": "tslint -p ./tsconfig.json",
    "posttest": "codecov -f coverage/*.json",
    "test:watch": "jest --config ./jest.config.json --watch",
    "docs": "./node_modules/.bin/apidoc -i ./src/app -o bin/docs",
    "test": "jest --config ./jest.config.json --coverage",
    "e2e": "jest --config ./jest.e2e.config.js --forceExit",
    "ci": "npm run lint && npm run test && npm run e2e",
    "serve": "nodemon"
  },
  "dependencies": {
    "@nestjs/common": "^4.1.1",
    "@nestjs/core": "^4.1.3",
    "@nestjs/microservices": "^4.1.0",
    "@nestjs/mongoose": "^3.0.1",
    "@nestjs/testing": "^4.1.0",
    "@nestjs/websockets": "^4.1.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "class-transformer": "^0.1.7",
    "class-validator": "0.7.3",
    "dotenv": "^4.0.0",
    "jsonwebtoken": "^8.1.0",
    "mongoose": "^5.0.7",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "redis": "^2.7.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.3"
  },
  "devDependencies": {
    "@types/async": "^2.0.44",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.16.5",
    "@types/express": "^4.0.36",
    "@types/jest": "^21.1.4",
    "@types/mongoose": "^4.7.23",
    "@types/node": "8.0.46",
    "@types/passport": "^0.4.3",
    "@types/passport-jwt": "^2.0.24",
    "@types/passport-local": "^1.0.31",
    "apidoc": "^0.17.6",
    "codecov": "^3.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.1.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "2.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "apidoc": {
    "title": "Uintasoft",
    "version": "1.0.0",
    "url": "https://api.uintasoft.com"
  }
}
