    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "class-transformer": "^0.1.7",
    "class-validator": "^0.7.2",
    "dotenv": "^4.0.0",
    "jsonwebtoken": "^8.1.0",
    "mongoose": "^4.12.1",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "redis": "^2.7.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.3",
    "typescript": "^2.4.2",
    "bootstrap": "^4.0.0-beta.2",
    "font-awesome": "4.7.0",
    "jquery": "^3.2.1",
    "jquery.easing": "^1.4.1"
